<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Checks</h1>
        <%= link_to "New Check", new_check_path, class: "btn btn-primary" %>
      </div>

      <% if @checks.any? %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
          <% @checks.each do |check| %>
            <div class="col">
              <div class="card h-100">
                <% if check.receipt_image.attached? %>
                  <%= image_tag check.receipt_image, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
                <% else %>
                  <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="bi bi-receipt fs-1 text-white"></i>
                  </div>
                <% end %>

                <div class="card-body">
                  <h5 class="card-title"><%= check.restaurant_name %></h5>

                  <div class="small text-muted mb-3">
                    <% if check.billed_on.present? %>
                      <i class="bi bi-calendar"></i> <%= check.billed_on.strftime("%B %d, %Y") %>
                    <% else %>
                      <i class="bi bi-calendar"></i> No date recorded
                    <% end %>
                  </div>

                  <div class="mb-3">
                    <div class="d-flex justify-content-between">
                      <span>Total:</span>
                      <strong class="text-success">$<%= number_with_precision(check.grand_total, precision: 2) %></strong>
                    </div>
                    <div class="d-flex justify-content-between small text-muted">
                      <span>Items:</span>
                      <span><%= check.line_items.size %></span>
                    </div>
                    <% if check.participants.any? %>
                      <div class="d-flex justify-content-between small text-muted">
                        <span>Participants:</span>
                        <span><%= check.participants.size %></span>
                      </div>
                    <% end %>
                  </div>

                  <div class="mb-3">
                    <span class="badge bg-<%= check_status_color(check.status) %>">
                      <%= check.status.capitalize %>
                    </span>
                  </div>

                  <div class="d-grid gap-2">
                    <%= link_to "View Details", check, class: "btn btn-outline-primary btn-sm" %>
                  </div>
                </div>

                <div class="card-footer bg-transparent">
                  <div class="d-flex justify-content-between">
                    <%= link_to edit_check_path(check), class: "btn btn-link btn-sm text-decoration-none" do %>
                      <i class="bi bi-pencil"></i> Edit
                    <% end %>
                    <%= button_to check, method: :delete, class: "btn btn-link btn-sm text-danger text-decoration-none",
                        form: { data: { turbo_confirm: "Are you sure?" } } do %>
                      <i class="bi bi-trash"></i> Delete
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info" role="alert">
          <h4 class="alert-heading">No checks yet!</h4>
          <p>Get started by uploading a receipt or creating a check manually.</p>
          <hr>
          <p class="mb-0">
            <%= link_to "Create your first check", new_check_path, class: "btn btn-primary" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>