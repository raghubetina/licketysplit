<%# Accepts: global_discount (required), check (required) %>

<li id="new_global_discount_form" class="list-group-item py-3 px-3">
  <%= form_with model: [check, global_discount], class: "global-discount-form" do |f| %>
    <% if global_discount.errors.any? %>
      <div class="alert alert-danger small mb-2 py-1">
        <% global_discount.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>

    <div class="row g-2 mb-2">
      <div class="col">
        <%= f.label :description, class: "form-label small mb-1" %>
        <%= f.text_field :description, class: "form-control form-control-sm", placeholder: "Add a discountâ€¦" %>
      </div>
      <div class="col-auto">
        <%= f.label :amount, class: "form-label small mb-1" %>
        <div class="input-group input-group-sm">
          <span class="input-group-text">$</span>
          <%= f.number_field :amount, step: 0.01, min: 0, class: "form-control form-control-sm", style: "width: 80px;", placeholder: "0.00" %>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-end">
      <%= f.submit "Add Discount", class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>
</li>
