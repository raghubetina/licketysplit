<%# Accepts: global_discount (required), check (required) %>

<li id="<%= dom_id(global_discount) %>" class="list-group-item py-3 px-3" data-turbo-refresh-animate>
  <div class="d-flex flex-column gap-1">
    <div class="d-flex justify-content-between align-items-center text-success">
      <span><%= global_discount.description %></span>
      <span>-<%= format_currency(global_discount.amount, check.currency_symbol) %></span>
    </div>
    <div class="d-flex gap-2 small">
      <%= link_to "Edit", edit_check_global_discount_path(check, global_discount), class: "text-muted", data: { turbo_stream: true } %>
      <%= link_to "Delete", check_global_discount_path(check, global_discount), class: "text-muted", data: { turbo_method: :delete, turbo_confirm: "Delete this discount?" } %>
    </div>
  </div>
</li>
