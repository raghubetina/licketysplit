<%# Accepts: participant (required), check (required) %>

<li id="<%= dom_id(participant) %>" class="list-group-item py-3 px-3">
  <div class="d-flex justify-content-between align-items-center small">
    <div class="d-flex align-items-baseline">
      <%= link_to edit_check_participant_path(check, participant), class: "btn btn-sm btn-outline-secondary me-1", title: "Edit participant", data: { turbo_stream: true } do %>
        <i class="bi bi-pencil small"></i>
      <% end %>
      <%= button_to check_participant_path(check, participant), method: :delete, class: "btn btn-sm btn-outline-secondary me-2", title: "Delete participant", form: { class: "d-inline-flex align-items-center", data: { turbo_confirm: "Delete this participant?" } } do %>
        <i class="bi bi-trash small"></i>
      <% end %>
      <span><%= participant.name %></span>
    </div>
  </div>
</li>
