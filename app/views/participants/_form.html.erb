<%# Accepts: participant (required), check (required) %>

<li id="<%= dom_id(participant) %>" class="list-group-item py-3 px-3">
  <%= form_with model: [check, participant], class: "participant-form" do |f| %>
    <div class="row g-2 align-items-end">
      <div class="col">
        <%= f.text_field :name, class: "form-control form-control-sm", placeholder: "Name" %>
      </div>
      <div class="col-auto">
        <div class="d-flex gap-1">
          <%= link_to "Cancel", check_participant_path(check, participant), class: "btn btn-sm btn-secondary", data: { turbo_stream: true } %>
          <%= f.submit "Save", class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</li>
