<%# Accepts: line_item (required), check (required) %>

<div id="<%= dom_id(line_item, :content) %>" class="d-flex flex-column gap-1">
  <div class="d-flex justify-content-between align-items-start">
    <div class="d-flex align-items-baseline">
      <span class="text-muted me-2 text-end" style="min-width: 50px;"><%= format_currency(line_item.unit_price * line_item.quantity, check.currency_symbol) %></span>
      <span>
        <strong><%= line_item.description %></strong>
        <% if line_item.quantity > 1 %>
          <span class="text-muted">(<%= line_item.quantity %>x @ <%= format_currency(line_item.unit_price, check.currency_symbol) %> each)</span>
        <% end %>
      </span>
    </div>
    <strong><%= format_currency(line_item.total_with_addons, check.currency_symbol) %></strong>
  </div>
  <% if line_item.discount && line_item.discount > 0 %>
    <div class="d-flex align-items-baseline">
      <span class="text-success me-2 text-end" style="min-width: 50px;">-<%= format_currency(line_item.discount, check.currency_symbol) %></span>
      <span class="text-success">
        <% if line_item.discount_description.present? %>
          <%= line_item.discount_description %>
        <% else %>
          Discount
        <% end %>
      </span>
    </div>
  <% end %>
  <div class="d-flex gap-2 small" style="margin-left: calc(50px + 0.5rem);">
    <%= link_to "Edit", edit_check_line_item_path(check, line_item), class: "text-muted", data: { turbo_stream: true } %>
    <%= link_to "Delete", check_line_item_path(check, line_item), class: "text-muted", data: { turbo_method: :delete, turbo_confirm: "Delete this item?" } %>
  </div>
</div>
