<%# Accepts: global_fee (required), check (required) %>

<li id="new_global_fee_form" class="list-group-item py-3 px-3" data-turbo-refresh-stream-permanent>
  <%= form_with model: [check, global_fee], class: "global-fee-form" do |f| %>
    <% if global_fee.errors.any? %>
      <div class="alert alert-danger mb-2 py-1">
        <% global_fee.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>

    <div class="row g-2 mb-2">
      <div class="col">
        <%= f.label :description, class: "form-label mb-1" %>
        <%= f.text_field :description, class: "form-control form-control-sm", placeholder: "Add a feeâ€¦" %>
      </div>
      <div class="col-auto">
        <%= f.label :amount, class: "form-label mb-1" %>
        <div class="input-group input-group-sm">
          <span class="input-group-text"><%= check.currency_symbol %></span>
          <%= f.number_field :amount, step: 0.01, min: 0, class: "form-control form-control-sm", style: "width: 80px;", placeholder: "0.00" %>
        </div>
      </div>
    </div>

    <% default_fee_type = if !check.has_tip?
                            "tip"
                          elsif !check.global_fees.tax.exists?
                            "tax"
                          else
                            "other"
                          end %>
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex gap-2">
        <% GlobalFee.fee_types.keys.each do |fee_type| %>
          <div class="form-check form-check-inline mb-0">
            <%= f.radio_button :fee_type, fee_type, class: "form-check-input", checked: fee_type == default_fee_type %>
            <%= f.label "fee_type_#{fee_type}", fee_type.capitalize, class: "form-check-label" %>
          </div>
        <% end %>
      </div>
      <%= f.submit "Add Fee", class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>
</li>
